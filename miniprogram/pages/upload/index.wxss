/* pages/upload/index.wxss */
page{
  background-color: #000;
}

.custom-nav {
  width: 100%;
  position: relative;
  background-color: transparent;
  z-index: 99;
}

.title {
  width: 100%;
  position: absolute;
  z-index: 9;
  display: flex;
}

.title-middle {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.title-content{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  color: #999;
  font-size: 30rpx;
}

.title-content .text{
  transition: all .28s;
  padding: 12rpx;
}
.title-content .text:first-child{
  margin-right: 30rpx;
}

.title-content .text.on{
  color: #fff;
}

.main{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.main .action-sheet .btn-upload{
  width: 120rpx;
  height: 120rpx;
  border-radius: 4px;
  background-color: #212121;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  color: #f4f4f4;
}

.main .remark{
  width: 650rpx;
  height: 90rpx;
  color: #fff;
  padding: 24rpx;
  font-size: 28rpx;
}

.main .action-sheet{
  width: 100%;
  padding: 15rpx 50rpx;
  box-sizing: border-box;
}