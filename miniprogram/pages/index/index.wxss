.main{
  width: 100%;
  height: 100vh;
  background: url(https://csdnimg.cn/release/blogv2/dist/pc/themesSkin/skin-whitemove/images/bg.gif) repeat;
}

.custom-nav {
  width: 100%;
  position: relative;
  background-color: transparent;
  z-index: 99;
}

.title {
  width: 100%;
  position: absolute;
  z-index: 9;
  display: flex;
}

.title-middle {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.title-content{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  color: #999;
  font-size: 30rpx;
}

.title-content .text{
  transition: all .28s;
  padding: 12rpx;
}
.title-content .text:first-child{
  margin-right: 30rpx;
}

.title-content .text.on{
  color: #fff;
}

.swiper{
  width: 100%;
}

.swiper .scroll-view{
  width: 710rpx;
  background-color: transparent;
  margin: 0 auto;
}

.circle-box{
  width: 100%;
  padding: 15rpx 20rpx;
  color: #fff;
  display: flex;
  box-sizing: border-box;
}

.circle-box .box-left{
  width: 100rpx;
  height: 88rpx;
  border-radius: 5px;
  overflow: hidden;
}

.circle-box .box-left .avatar{
  width: 88rpx;
  height: 88rpx;
}

.circle-box .box-right{
  width: 640rpx;
  display: flex;
  margin-left: 20rpx;
  flex-direction: column;
  box-sizing: border-box;
}

.circle-box .box-right .nick-name{
  color: #7B92AF;
  font-size: 32rpx;
  margin-bottom: 15rpx;
}

.circle-box .box-right .remark{
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.circle-box .box-right .photo-wall{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.circle-box .box-right .photo-wall .photo{
  width: 120rpx;
  height: 120rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.player{
  width: 88rpx;
  height: 88rpx;
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  border-radius: 50%;
  background-color: #fff;
  box-shadow: 0rpx 4rpx 20rpx 0rpx rgba(0,0,0,0.08);
  display: flex;
  justify-content: center;
  align-items: center;
}

.player.animation{
  animation: rotate 3s linear infinite;
}

.player view{
  font-size: 32rpx;
  color: #999;
}

/* 声明动画 */
@keyframes rotate {
  100%{
    transform: rotate(360deg);
  }
}